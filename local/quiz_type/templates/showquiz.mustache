    <tr>
        <td><center>{{id}}</center></td>
        <td><center>{{quizname}}</center></td>
        <td><center>{{question}}</center></td>
        <td><center>{{option1}}</center></td>
        <td><center>{{option2}}</center></td>
        <td><center>{{option3}}</center></td>
        <td><center>{{option4}}</center></td>
        <td><center>{{trueoption}}</center></td>
    </tr>
    </tbody>
{{/quiz}}
</table>

<hr>
<input type="button" class="btn btn-primary" value="Add quiz" onclick="location.href='{{editurl}}'">
