<h1>List of quiz with questions</h1>


  <table id="example" class="display" style="width:100%">
    <thead>
      <tr>
        <th><h4><b><center>quiz id</center></b></h4></th>
        <th><h4><b><center>quizname</center></b></h4></th>
        <th><h4><b><center>question</center></b></h4></th>
        <th><h4><b><center>option1</center></b></h4></th>
        <th><h4><b><center>option2</center></b></h4></th>
        <th><h4><b><center>option3</center></b></h4></th>
        <th><h4><b><center>option4</center></b></h4></th>
        <th><h4><b><center>trueoption</center></b></h4></th>
       </tr>
    </thead>
{{#quiz}}
