<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/quiz_type/db" VERSION="20130407" COMMENT="XMLDB file for local message plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">
    <TABLES>
        <TABLE NAME="local_quiz_type" COMMENT="each record is a quiz">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="quizname" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="question" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="option1" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="option2" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="option3" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="option4" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="trueoption" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>
